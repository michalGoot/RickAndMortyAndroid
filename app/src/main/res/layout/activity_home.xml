<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:weightSum="100"
    android:background="@drawable/homejpg"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/get_schwifty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Choose a game:"
        android:textSize="40sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="105"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGuessNumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="#FF018786"
                android:textColor="@color/white"
                android:text="Guess number"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>

            <Button
                android:id="@+id/btnSevenBoom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="#FF018786"
                android:textColor="@color/white"
                android:text="7 Boom"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>

            <Button
                android:id="@+id/btnRPS"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="#FF018786"
                android:textColor="@color/white"
                android:text="🖐️ RPS 👊"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>

            <Button
                android:id="@+id/btnSignout"
                android:text="Sign out"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="100"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:weightSum="100"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/exitIcon"
                android:src="@drawable/exiticon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"/>
    </LinearLayout>



</LinearLayout>