<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevenboom"
    tools:context=".SevenBoomActivity">

    <TextView
        android:id="@+id/rps_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e294e"
        android:fontFamily="@font/get_schwifty"
        android:gravity="center"
        android:padding="20dp"
        android:text="Seven Boom"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <LinearLayout
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:gravity="center|top">



        <TextView
            android:id="@+id/showNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#B7FFFFFF"
            android:text="Your Number Is: "
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/boomBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go For The 7"
            android:textColor="@color/white"
            app:backgroundTint="#1E110B"
            android:layout_marginTop="120dp"/>

        <Button
            android:id="@+id/btn7BoomToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Back to main menu"
            android:layout_marginTop="120dp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imgHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        app:srcCompat="@drawable/help" />

</RelativeLayout>